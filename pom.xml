                                    <classifier>derby-ddl</classifier>
                                </artifact>
                                <artifact>
                                    <file>${project.basedir}/scripts/derby/create.sql</file>
                                    <type>sql</type>
                                    <classifier>derby-drop</classifier>
                                </artifact>
                                <!-- mysql scripts -->
