<?xml version="1.0" encoding="UTF-8" ?>
<!--
  This is used to map the model types to PostgreSQL types for generated code.

  Please note that most of the info on this page was derived from
  http://www.postgresql.org/docs/7.3/interactive/datatype.html
-->
<mappings name="PostgreSQL">
    <mapping>
        <from>datatype::String</from>
        <to>VARCHAR(1024)</to>
    </mapping>
    <mapping>
        <from>datatype::Date</from>
        <to>TIMESTAMP</to>
    </mapping>
    <mapping>
        <from>datatype::Time</from>
        <to>TIME</to>
    </mapping>
    <mapping>
        <from>datatype::Timestamp</from>
        <from>datatype::DateTime</from>
        <to>TIMESTAMP</to>
    </mapping>
    <mapping>
        <from>datatype::char</from>
        <from>datatype::Character</from>
        <to>CHAR(1)</to>
    </mapping>
    <mapping>
        <from>datatype::byte</from>
        <from>datatype::Byte</from>
        <to>SMALLINT</to>
    </mapping>
    <mapping>
        <from>datatype::short</from>
        <from>datatype::Short</from>
        <to>SMALLINT</to>
    </mapping>
    <mapping>
        <from>datatype::int</from>
        <from>datatype::Integer</from>
        <to>MEDIUMINT</to>
    </mapping>
    <mapping>
        <from>datatype::long</from>
        <from>datatype::Long</from>
        <to>BIGINT</to>
    </mapping>
    <mapping>
        <from>datatype::float</from>
        <from>datatype::Float</from>
        <to>FLOAT</to>
    </mapping>
    <mapping>
        <from>datatype::double</from>
        <from>datatype::Double</from>
        <from>datatype::Money</from>
        <to>DOUBLE</to>
    </mapping>
    <mapping>
        <from>datatype::boolean</from>
        <from>datatype::Boolean</from>
        <to>BOOLEAN</to>
    </mapping>
    <mapping>
        <from>datatype::Decimal</from>
        <from>datatype::decimal</from>
        <to>BIGINT UNSIGNED</to>
    </mapping>
    <mapping>
        <from>datatype::Blob</from>
        <to>LONGBLOB</to>
    </mapping>
    <mapping>
        <from>datatype::Clob</from>
        <to>LONGTEXT</to>
    </mapping>
</mappings>
